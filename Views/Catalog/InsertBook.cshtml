@model InsertBookViewModel
@{
    ViewBag.Title = "Insert a book";
}
<form asp-controller="Catalog" asp-action="InsertBook">
    <div class="form-group">
        <label asp-for="copy.BookId" class="control-label">Book ID</label>
        <input type="number" max="@Model.maxIdBookValue" asp-for="copy.BookId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="copy.LibraryId" class="control-label">Lib ID</label>
        <input type="number" max="@Model.maxIdLibValue" asp-for="copy.LibraryId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="copy.Amount" class="control-label">Amount</label>
        <input type="number" asp-for="copy.Amount" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Insert" class="btn-default" />
    </div>
</form>