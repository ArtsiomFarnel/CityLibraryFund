@{
    @model CityLibraryFund.Models.LoginModel
    ViewData["Title"] = "Login";
    @section Scripts {
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    }
}
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="login-form-parent">
        <h2>Форма входа</h2>
        <div class="login-form-child">
            <label asp-for="Name">Введите уникальное имя: </label>
            <input placeholder="имя" type="text" asp-for="Name" />
            <span class="field-validation-valid" asp-validation-for="Name" />
        </div>
        <div class="login-form-child">
            <label asp-for="Password">Введите пароль: </label>
            <input placeholder="пароль" type="password" asp-for="Password" />
            <span class="field-validation-valid" asp-validation-for="Password" />
        </div>
        <div class="login-form-child">
            <input type="submit" value="Вход" class="btn btn-outline-dark" />
            <a asp-action="Register" asp-controller="Account">
                <input type="button" value="Регистрация" class="btn btn-outline-dark">
            </a>
            <div class="validation" asp-validation-summary="ModelOnly"></div>
        </div>
    </div>
</form>